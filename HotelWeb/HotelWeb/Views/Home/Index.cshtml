@{
    ViewBag.Title = "Почетна";
}

<div class="col-md-9 col-md-offset-1">

    <div class="row carousel-holder">

        <div class="col-md-12">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                </ol>

                <div class="carousel-inner">
                    <div class="item active">
                        <!-- sliki od naslovnata strana -->
                        <img class="slide-image" src="~/Images/Front/slider-1.jpg" alt="">
                    </div>
                    <div class="item">
                        <img class="slide-image" src="~/Images/Front/slider-2.jpg" alt="">
                    </div>
                    <div class="item">
                        <img class="slide-image" src="~/Images/Front/slider-3.jpg" alt="">
                    </div>
                </div>

                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>

    </div>

    <div class="row">

        @foreach (var room in ((HotelWeb.Models.RoomsModel)ViewBag.Rooms).Items)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    @*http://placehold.it/320x150*@
                    <img src="@room.ImagePreviewUrl" alt="">
                    <div class="caption">
                        <h4 class="">@room.Price.ToString() MKD</h4>
                        <h4>
                            <a href="#">@room.Name</a>
                        </h4>
                        <p><small>Лица: @room.MaxPersons.ToString()</small></p>

                    </div>
                    <p class="info">@room.Descirption</p>
                    <div class="ratings reserve-link">
                        <h4>
                            <a href="@Url.Action("Select", "Reservation", new { id = room.Id })" class="btn btn-danger">Резервирај »</a>
                        </h4>
                    </div>
                </div>
            </div>
        }
    </div>

</div>