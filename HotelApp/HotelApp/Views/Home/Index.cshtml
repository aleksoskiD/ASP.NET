@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home Page";
}


<div class="col-md-9 col-md-offset-1" style="margin-bottom: 20px;">
    <div class="container">
        <br>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Images/Front/slider-1.jpg" alt="Chania" width="460" height="345">
                </div>

                <div class="item">
                    <img src="~/Images/Front/slider-2.jpg" alt="Chania" width="460" height="345">
                </div>

                <div class="item">
                    <img src="~/Images/Front/slider-3.jpg" alt="Flower" width="460" height="345">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<br />
<div class="row">
    
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail thumbnail_image">
            <img src="~/Images/Thumbnails/single-room.jpg" alt="single room">
            <div class="caption">
                <h3>Single room</h3>
                <br />
                <ul class="list-inline">
                    <li><i class="fa fa-wifi" aria-hidden="true"></i></li>
                    <li><i class="fa fa-television" aria-hidden="true"></i></li>
                    <li><i class="fa fa-glass" aria-hidden="true"></i></li>
                </ul>
                <p>
                    @Html.ActionLink("Book Now", "CreateReservation", "Reservation", new { id = User.Identity.GetUserId(), roomType = "single" }, new { @class = "btn btn-success" })
                </p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail thumbnail_image">
            <img src="~/Images/Thumbnails/double_room.jpg" alt="double room">
            <div class="caption">
                <h3>Double room</h3>
                <br />
                <ul class="list-inline">
                    <li><i class="fa fa-wifi" aria-hidden="true"></i></li>
                    <li><i class="fa fa-television" aria-hidden="true"></i></li>
                    <li><i class="fa fa-glass" aria-hidden="true"></i></li>
                </ul>
                <p>
                    @Html.ActionLink("Book Now", "CreateReservation", "Reservation", new { id = User.Identity.GetUserId(), roomType = "double" }, new { @class = "btn btn-success" })
                </p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail thumbnail_image">
            <img src="~/Images/Thumbnails/double-large-room.jpg" alt="double-large room">
            <div class="caption">
                <h3>Double-large room</h3>
                <br />
                <ul class="list-inline">
                    <li><i class="fa fa-wifi" aria-hidden="true"></i></li>
                    <li><i class="fa fa-television" aria-hidden="true"></i></li>
                    <li><i class="fa fa-glass" aria-hidden="true"></i></li>
                </ul>
                <p>
                    @Html.ActionLink("Book Now", "CreateReservation", "Reservation", new { id = User.Identity.GetUserId(), roomType="doubleLarge" }, new { @class = "btn btn-success" })
                </p>
            </div>
        </div>
    </div>
</div>